CFLAGS = -framework Accelerate $(FLAGS) -O3 -mtune=native -fopenmp  -fpic -I.
CXXFLAGS = -framework Accelerate $(FLAGS) -O3 -mtune=native -fopenmp  -fpic -I. -I$(EIGEN)
LDFLAGS = -framework Accelerate
TARGET = librSPDE.so
OBJ = $(patsubst %.c,%.o,$(wildcard *.c)) $(patsubst %.cpp,%.o,$(wildcard *.cpp))

$(TARGET) : $(OBJ)
	$(CXX) $(LDFLAGS) -o $@ -dynamiclib $^ -lgfortran -lgomp -lm

 clean :; rm -f $(TARGET) $(OBJ)

