#!/bin/bash
cmd=$(readlink -f "$0")
tmp=$(basename "$cmd")
prog=${tmp%%.run}
DIR=$(dirname "$cmd")

D=""
for d in /lib64 /usr/lib64 /usr/lib/x86_64-linux-gnu /lib /usr/lib; do
    if [ -d "$d" ]; then
	D="$D:$d"
    fi
done
export LD_LIBRARY_PATH="$DIR/first:$D:$DIR:$LD_LIBRARY_PATH"

if [ "${INLA_DEBUG}XX" != "XX" ]; then
    echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH"
    ldd -r "$DIR/$prog"
fi

exec "$DIR/$prog" "$@"
