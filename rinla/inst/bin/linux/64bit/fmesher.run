#!/bin/bash
cmd=$(readlink -f "$0")
tmp=$(basename "$cmd")
prog=${tmp%%.run}
DIR=$(dirname "$cmd")

if [ -d "/usr/lib64" ]; then
    ## fedora like...
    D="/lib64:/usr/lib64"
else
    ## ubuntu like...
    D="/lib:/usr/lib:/usr/lib/x86_64-linux-gnu"
fi
export LD_LIBRARY_PATH="$DIR/first:$D:$DIR:$LD_LIBRARY_PATH"

if [ "${INLA_DEBUG}XX" != "XX" ]; then
    echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH"
    ldd -r "$DIR/$prog"
fi

exec "$DIR/$prog" "$@"
