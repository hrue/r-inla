citHeader("To cite INLA in publications use:")

citEntry(
    entry = "Article",
    author =
      personList(as.person("H{\\aa}vard Rue"),
                 as.person("Sara Martino"),
                 as.person("Nicholas Chopin")),
    title =
      paste("Approximate {Bayesian} Inference for Latent {Gaussian}",
            "Models Using Integrated Nested {Laplace} Approximations (with discussion)."),
    journal = "Journal of the Royal Statistical Society B",
    year    = "2009",
    volume  = "71",
    pages   = "319--392",

    textVersion  =
    paste("Havard Rue, Sara Martino, and Nicholas Chopin (2009), ",
          "Approximate Bayesian Inference for Latent Gaussian",
          "Models Using Integrated Nested Laplace Approximations (with discussion), ",
        "Journal of the Royal Statistical Society B, 71, 319-392.")
)

citEntry(
    entry = "Article",
    title = "Bayesian computing with {INLA}: {N}ew features.",
    author  =
      personList(as.person("Thiago G. Martins"),
      		 as.person("Daniel Simpson"),
		 as.person("Finn Lindgren"),
                 as.person("H{\\aa}vard Rue")),
    year    = "2013",
    volume  = "67",
    pages   = "68--83",
    journal = "Computational Statistics and Data Analysis",

    textVersion  =
      paste("Thiago G. Martins, Daniel Simpson, Finn Lindgren and Havard Rue (2013), ",
            "Bayesian computing with INLA: New features, ",
	    "Computational Statistics and Data Analysis, 67(2013) 68-83")
)

citEntry(
    entry = "Article",
    title =
      paste("An Explicit Link between {Gaussian} Fields",
            "and {Gaussian} {Markov} Random Fields:",
            "The Stochastic Partial Differential Equation Approach (with discussion)."),
    author  =
      personList(as.person("Finn Lindgren"),
                 as.person("H{\\aa}vard Rue"),
                 as.person('Johan Lindstr{\\"o}m')),
    year    = "2011",
    volume  = "73",
    number  = "4",
    pages   = "423--498",
    journal = "Journal of the Royal Statistical Society B",

    textVersion  =
      paste("Finn Lindgren, Havard Rue, and Johan Lindstrom (2011).",
            "An Explicit Link Between Gaussian Fields and Gaussian",
            "Markov Random Fields: The Stochastic Partial Differential",
            "Equation Approach (with discussion), ",
            "Journal of the Royal Statistical Society B, 73(4), 423-498.")
)

citEntry(
    entry = "Article",
    title        = "Bayesian Spatial Modelling with {R}-{INLA}",
    author       =
      personList(as.person("Finn Lindgren"),
                 as.person("H{\\aa}vard Rue")),
    journal      = "Journal of Statistical Software",
    year         = "2015",
    volume       = "63",
    number       = "19",
    pages        = "1--25",
    url          = "http://www.jstatsoft.org/v63/i19/",

    textVersion  =
      paste("Finn Lindgren, Havard Rue (2015). ",
            "Bayesian Spatial Modelling with R-INLA. ",
            "Journal of Statistical Software, 63(19), 1-25. ",
            "URL http://www.jstatsoft.org/v63/i19/.")
)

citEntry(
    entry = "Article",
    title        = "Bayesian computing with {INLA}: {A} review}",
    author       = personList(as.person("H{\\aa}vard Rue"),
                              as.person("Andrea I. Riebler"), 
                              as.person("Sigrunn H. S{\\o}rbye"), 
                              as.person("Janine B. Illian"),
                              as.person("Daniel P. Simpson"),
                              as.person("Finn K. Lindgren")), 
    journal      = "Annual Reviews of Statistics and Its Applications",
    year         = "2017",
    volume       = "4",
    number       = "March",
    pages        = "395--421",
    url          = "http://arxiv.org/abs/1604.00860",

    textVersion  = paste(
        "H. Rue, A. Riebler, S. H. Sorbye, J. B. Illian, D. P. Simpson, and F. K. Lindgren.",
        "Bayesian computing with INLA: A review.",
        "Annual Reviews of Statistics and Its Applications, 4(March):395-421, 2017.",
        "URL http://arxiv.org/abs/1604.00860")
)
