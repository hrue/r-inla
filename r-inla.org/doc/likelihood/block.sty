\setlength{\parskip}{1.5ex}
\setlength{\parindent}{0cm}

\def\0#1{\ifx\@undefined#1\else
\toks0=\expandafter{#1}
\edef#1{{\noexpand\setlength{\parskip}{0mm}\the\toks0}}
\fi}

\0\tableofcontents
\0\listoffigures
\0\listoftables

